<%- include('parts/header') %>
<%- include('components/navbar') %>

<section class="page-header clearfix" style="background-image: url(/img/backgrounds/page-header-bg.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="page-header__wrapper clearfix">
                    <div class="page-header__title">
                        <h2>O'qituvchilar</h2>
                    </div>
                    <div class="page-header__menu">
                        <ul class="page-header__menu-list list-unstyled clearfix">
                            <li class="active">O'qituvchilar</li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<section class="meet-teachers-one">
    <div class="container">
        <div class="row">
            <% teachers.forEach(teacher => { %>
                <div class="col-xl-4 col-lg-4">
                <div class="meet-teachers-one__single wow fadeInUp animated" data-wow-delay="0ms" data-wow-duration="1500ms" style="visibility: visible; animation-duration: 1500ms; animation-delay: 0ms; animation-name: fadeInUp;">
                    <div class="meet-teachers-one__single-img">
                        <img src="<%= teacher.img %>" alt="">
                    </div>

                    <div class="meet-teachers-one__single-content">
                        <div class="meet-teachers-one__single-middle-content">
                            <div class="title">
                                <h4><%= teacher.name %></h4>
                            </div>
                        </div>

                        <div class="meet-teachers-one__single-bottom-content">
                            <div class="meet-teachers-one__single-content-courses-box">
                                <div class="text">
                                    <p>Kurslari soni: <%= teacher.count %></p>
                                </div>
                                <div class="social-icon">
                                    <ul class="list-unstyled">
                                        <li><a target="_blank" href="<%= teacher.telegram %>"><i class="fab fa-telegram"></i></a></li>
                                        <li><a target="_blank" href="<%= teacher.instagram %>"><i class="fab fa-facebook"></i></a></li>
                                        <li><a target="_blank" href="<%= teacher.facebook %>"><i class="fab fa-instagram"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</section>


<%- include('components/footer') %>
<%- include('parts/footer') %>